<Window x:Class="demos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="-2,-4,1.6,4">

        <Grid.RowDefinitions>

            <RowDefinition Height="4*"/>

            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="123*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="#76E383"></Grid>
        <TextBlock Text="Спортивные товары" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <Image Source="Resources/logo.png" HorizontalAlignment="Left" Margin="7,-1,0,1"></Image>
        <Button Name="BtnBack" Content="Назад" Width="100" Height="30" HorizontalAlignment="Right" Margin="10" Click="BtnBack_Click"></Button>
        <Frame NavigationUIVisibility="Hidden" ContentRendered="MainFrame_contentRendered" Grid.Row="1" Name="MainFrame"></Frame>
        
    </Grid>
</Window>
